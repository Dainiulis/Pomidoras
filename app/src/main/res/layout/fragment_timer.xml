<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fragment_timer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:activity="com.dmiesoft.fitpomodoro.ui.fragments.TimerUIFragment">

    <com.dmiesoft.fitpomodoro.utils.customViews.CustomTimerView
        android:id="@+id/customTimer"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:text="time"
        app:textColor="@android:color/darker_gray"
        app:textSize="@dimen/timerTextSize" />

    <!--<TextView-->
        <!--android:id="@+id/timerTypeText"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/customTimer"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_margin="5dp"-->
        <!--android:text="timerType"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textSize="24sp" />-->

    <ImageView
        android:id="@+id/timerTypeImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnStopTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/alert_light_frame" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnStartPauseTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_media_play" />


    </RelativeLayout>

</LinearLayout>

