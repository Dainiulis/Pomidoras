<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fragment_timer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:activity="com.dmiesoft.fitpomodoro.ui.fragments.TimerUIFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.dmiesoft.fitpomodoro.utils.customViews.CustomTimerView
        android:id="@+id/customTimer"
        android:layout_width="@dimen/timerSize"
        android:layout_height="@dimen/timerSize"
        app:textSize="@dimen/timerTextSize"
        app:text="time"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/timer_land_left_margin"
        android:layout_marginStart="@dimen/timer_land_left_margin"
        app:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/timerType"
        android:textSize="24sp"
        android:text="timerType"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/timer_land_left_margin"
        android:layout_marginStart="@dimen/timer_land_left_margin"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/customTimer"
        android:layout_toRightOf="@+id/customTimer"
        android:layout_toStartOf="@+id/btnLayout"
        android:layout_toLeftOf="@+id/btnLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:padding="10dp"
        android:layout_marginRight="@dimen/timer_land_left_margin"
        android:layout_marginEnd="@dimen/timer_land_left_margin"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/btnLayout"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnStopTimer"
            app:srcCompat="@android:drawable/alert_light_frame"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnStartPauseTimer"
            app:srcCompat="@android:drawable/ic_media_play"
            android:layout_margin="@dimen/fab_margin"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>

